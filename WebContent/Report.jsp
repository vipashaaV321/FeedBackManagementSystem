        <h1 class="h2">Dashboard</h1>
       
      </div>

      
<%
ArrayList<UserBean> users=(ArrayList<UserBean>)request.getAttribute("users");
%>

<table class="table">
  <thead class="black white-text">
    <tr>
      <th scope="col">#Id</th>
      <th scope="col">First Name</th>
      <th scope="col">Email</th>
      <th scope="col">Generate Report</th>
    <th scope="col">Display Report</th>
    </tr>
  </thead>
 
  <tbody>
  <%
for(UserBean u:users){
	%>
    <tr>
    
      <td><% out.print(u.getUserId()); %></td>
      <td><% out.print(u.getFirstName());%></td>
      <td><% out.print(u.getEmail());%></td>
      <td><% out.print("<a href='ReportGController?userId=" + u.getUserId() + "' >GenerateReport</a>" ); %></td>
    <td><% out.print("<a href='DisplayReportController?userId=" + u.getUserId() + "' >Report</a>" ); %></td>
    </tr>
<% } %>

  </tbody>
</table>
